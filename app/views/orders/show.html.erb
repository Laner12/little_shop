<div class="page-content">
  <h1>Order Details</h1>
    <div class="well col-md-12 table-responsive" id="order-<%= @order.id %>">
      <table class="table">
        <thead>
          <tr>
            <td colspan="5" class="text-left">
              <strong>Order # <%= @order.id %></strong>
              <p><strong>Placed: <%= @order.date %></strong></p>
              <strong>Status: <%= @order.status %></strong>
            </td>
          </tr>
          <tr>
            <th>Item</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Subtotal</th>
            <th>Last Updated</th>
          </tr>
        </thead>
        <tbody>
          <% @order.items.each do |item| %>
            <tr id="item-<%= item.id %>">
              <td><%= link_to item.title, item_path(item) %></td>
              <td><%= item.description %></td>
              <td><%= @order.item_quantity(item) %></td>
              <td><%= number_to_currency(item.price) %></td>
              <td><%= number_to_currency(@order.sub_total(item)) %></td>
              <td><%= @order.time_updated %></td>
            </tr>
          <% end %>
        <tr>
          <td colspan="5" class="text-right">
            <strong>Total: <%= number_to_currency(@order.total) %></strong>
          </td>
          <td colspan="5" class="text-right">
            <%= link_to "Order History", orders_path, class: 'btn btn-primary' %>
          </td>
        </tr>
      </tbody>
    </table>
</div>
