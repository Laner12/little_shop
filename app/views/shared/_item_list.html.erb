<div id="items_list">
  <div class="items">
  <% @items.each do |item| %>
    <div class='item' data-all="<%= item.title %> <%= item.celebrity_name %> <%= item.category.title %>">
    <div class ="well col-md-3 text-center" id="item-<%= item.id %>">
      <p>
        <%= image_tag(item.image_path, alt: "#{item.title} pic", class: 'img-thumbnail item-image') %>
      </p>
      <p>
      <a id="popoverData" class="btn" href="<%= item_path(item) %>" data-content="<%= item.description %>" rel="popover" data-placement="bottom" data-original-title="Description" data-trigger="hover">
        <%= item.title %>
      </a>
      <p>
        Celebrity: <%= item.celebrity_name %>
      </p>
      <p>
        <%= number_to_currency(item.price) %>
      </p>
      <%= content_tag :div do %>
        <%= button_to "#{btn_label}", cart_items_path(item_id: item.id), class: "center_button btn btn-#{btn_class}", disabled: status %>
      <% end %>
      <%= link_to "Edit", edit_admin_item_path(item), class: "center_button btn btn-default" if current_admin? %>
    </div>
  </div>
  <% end %>
</div>
</div>
