<div class="page-content">
  <h1>Add New Treasure</h1>
  <div class="well col-md-7 col-md-offset-2">
    <%= form_for(@item) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, step: 'any', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :category_id %>
        <%= f.select :category_id, item_categories, {}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :celebrity_id %>
        <%= f.select :celebrity_id, item_celebrities, {}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: 'center_button' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Add Treasure', class: 'form-control btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
