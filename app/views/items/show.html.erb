<div class="item-show">
  <div class="well col-md-10">
    <h1><%= @item.title %></h1>
    <%= image_tag(@item.image_path, alt: "#{@item.title} pic", class: 'img-thumbnail show-image', style: 'float:left') %>
    <div class="item-content">
      <h2><p>Celebrity: <strong><%= @item.celebrity_name %></strong></h2></p>
      <h4><p>Category: <%= @item.category.title %></p></h4>
      <p><%= @item.description %></p>
      <p><%= number_to_currency(@item.price) %><p>
      <% if @item.sold_out? %>
        <p><%= link_to 'SOLD OUT', cart_items_path(item_id: @item.id), class: 'btn btn-danger', disabled: 'disabled' %></p>
      <% else %>
        <p><%= button_to 'Add to Cart', cart_items_path(item_id: @item.id), class: 'btn btn-default' %></p>
        <% if current_admin? %>
          <p><%= link_to 'Edit Item', edit_admin_item_path(@item), class: 'btn btn-default' %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
